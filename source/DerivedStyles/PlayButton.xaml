    <Style x:Key="PlayButtonBorderBackground" TargetType="Border">
        <Style.Resources>
            <Color x:Key="PlayButtonBackgroundColor">#433de7</Color>
            <Color x:Key="PlayButtonHighlightBackgroundColor">#5651e9</Color>
            <!--<Color x:Key="PlayButtonBackgroundColor">#ffffff</Color>
            <Color x:Key="PlayButtonHighlightBackgroundColor">#ffffff</Color>-->
            <!--<Color x:Key="PlayButtonBackgroundColor">#ff2b30</Color>
            <Color x:Key="PlayButtonHighlightBackgroundColor">#ff5c5f</Color>-->
            <!--<Color x:Key="PlayButtonBackgroundColor">#ff0208</Color>
            <Color x:Key="PlayButtonHighlightBackgroundColor">#ff2b30</Color>-->
            <SolidColorBrush x:Key="PlayButtonBackgroundBrush" Color="{StaticResource PlayButtonBackgroundColor}" />
        </Style.Resources>
        <Setter Property="Background" Value="{StaticResource PlayButtonBackgroundBrush}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True">
                <DataTrigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="{StaticResource PlayButtonHighlightBackgroundColor}" 
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                    FillBehavior="HoldEnd"
                                    Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.EnterActions>
                <DataTrigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="{StaticResource PlayButtonBackgroundColor}" 
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                    FillBehavior="HoldEnd"
                                    Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.ExitActions>
            </DataTrigger>
        </Style.Triggers>
    </Style>

